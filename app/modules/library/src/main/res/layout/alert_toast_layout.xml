<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlAlertToast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/five"
    android:paddingRight="@dimen/five">

    <com.android.library.widgets.CustomTextView
        android:id="@+id/tvMessageAlertToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_black_trans_thirty_rad_fifty"
        android:gravity="center"
        android:padding="@dimen/twelve"
        android:text="Toast message"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen"
        app:typeface="@string/proxima_nova_light"/>

</RelativeLayout>
