<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bg_sec"/>

    <ImageView
        android:id="@+id/ivLogoLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four"
        android:layout_above="@+id/llLogin"
        android:layout_marginEnd="@dimen/forty"
        android:layout_marginLeft="@dimen/forty"
        android:layout_marginRight="@dimen/forty"
        android:layout_marginStart="@dimen/forty"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/forty"
        android:background="@drawable/bg_rect_white_rad_ten"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/twenty_four">

        <EditText
            android:id="@+id/etUsernameLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:gravity="center"
            android:hint="@string/login_username_hint"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/et_padding"
            android:textColor="@color/text_pri"
            android:textColorHint="@color/et_hint"
            android:textSize="@dimen/et_size"/>

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen"
            android:background="@drawable/bg_edit_text"
            android:gravity="center"
            android:hint="@string/login_password_hint"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="@dimen/et_padding"
            android:textColor="@color/text_pri"
            android:textColorHint="@color/et_hint"
            android:textSize="@dimen/et_size"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen"
            android:background="@drawable/bg_button_pri"
            android:minHeight="0dp"
            android:minWidth="@dimen/one_hundred_fifty"
            android:padding="@dimen/btn_padding"
            android:text="@string/login_button"
            android:textColor="@color/btn_text_pri"
            android:textSize="@dimen/btn_size"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPoweredByLogin"
        android:layout_width="@dimen/ninety_five"
        android:layout_height="@dimen/forty_five"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sixteen"
        android:src="@drawable/ic_logo_powered_by"/>

</RelativeLayout>