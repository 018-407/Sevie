<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/et_background"/>
            <corners android:radius="@dimen/et_radius"/>
            <stroke android:width="@dimen/et_stroke" android:color="@color/et_stroke_not_focused"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/et_background"/>
            <corners android:radius="@dimen/et_radius"/>
            <stroke android:width="@dimen/et_stroke" android:color="@color/et_stroke_focused"/>
        </shape>
    </item>
</selector>