<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/theme_pri"/>
                    <corners android:radius="@dimen/fifty"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_trans_thirty"/>
                    <corners android:radius="@dimen/fifty"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_pri"/>
            <corners android:radius="@dimen/fifty"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_background_not_enabled"/>
            <corners android:radius="@dimen/fifty"/>
        </shape>
    </item>
</selector>